{% extends 'LadbCoreBundle:Common:_modal-content.part.html.twig' %}

{% set id = 'answer_modal' %}
{% set title = 'Coucou' %}

{% form_theme form 'LadbCoreBundle:Common:_form-theme.twig.twig' 'LadbCoreBundle:Block:_form-theme.html.twig' %}

{% block bodyInner %}
    {{ form_start(form, { 'action':formAction, 'method':'POST', 'attr':{ 'novalidate':'novalidate' } }) }}
        {% block sections %}
            {{ form_errors(form) }}
            {% include 'LadbCoreBundle:Block:_form-section-body-inner.part.html.twig' with { 'mandatory':true } %}
        {% endblock %}
        {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

{% block footerInner %}
    <button class="btn btn-default" data-dismiss="modal">{{ 'default.cancel'|trans() }}</button>
{% endblock %}
