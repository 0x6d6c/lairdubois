{% extends 'LadbCoreBundle:Common:_masonry-list-thumbnail-wide.part.html.twig' %}

{% set entity = question %}

{% block title %}<i class="ladb-icon-question"></i>&nbsp;{{ parent() }}{% endblock %}

{% block imageOuter %}{% endblock %}

{% block entityMetas %}
    <div class="pull-left">
        {% if entity.answerCount == 0 %}
            <span class="label label-danger">Sans r√©ponse</span>
        {% else %}
            <span class="label label-{% if entity.positiveVoteCount > entity.negativeVoteCount %}success{% elseif entity.positiveVoteCount < entity.negativeVoteCount %}danger{% else %}default{% endif %}">{{ entity.answerCount|number_format(0, ',', ' ') }} {{ 'qa.question.choice.answers'|transchoice(question.answerCount) }}</span>
        {% endif %}
    </div>
    {{ parent() }}
{% endblock %}