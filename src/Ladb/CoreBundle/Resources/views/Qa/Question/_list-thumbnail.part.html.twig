{% extends 'LadbCoreBundle:Common:_masonry-list-thumbnail-wide.part.html.twig' %}

{% set entity = question %}

{% block title %}<i class="ladb-icon-question"></i>&nbsp;{{ parent() }}{% endblock %}

{% block imageOuter %}{% endblock %}

{% block entityMetas %}
    {{ parent() }}
    <li class="ladb-counter">
        <span class="ladb-color-{% if entity.positiveAnswerCount > 0 %}positive{% elseif entity.undeterminedAnswerCount > 0 %}undetermined{% elseif entity.negativeAnswerCount > 0 %}negative{% else %}null{% endif %}"><i class="ladb-icon-answer"></i> {{ entity.answerCount|number_format(0, ',', ' ') }} {{ 'qa.answer.choice.answers'|transchoice(question.answerCount) }}</span>
        |
    </li>
{% endblock %}