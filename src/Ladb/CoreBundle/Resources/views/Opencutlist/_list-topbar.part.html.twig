{% extends 'LadbCoreBundle:Common:_list-topbar.part.html.twig' %}

{% set heading = '<i class="ladb-icon-statistics"></i> OpenCutList Stats' %}

{% block listTopbarRightInner %}
    <div class="ladb-header-tools" style="padding-top: 0;">
    <div class="btn-group">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <i class="ladb-icon-history"></i> {{ days }}<span class="ladb-hidden-mobile"> derniers jours</span>
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right">
            <li{% if days == '7' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':7, 'continent':continent, 'language':language }) }}">7 derniers jours</a></li>
            <li{% if days == '28' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':28, 'continent':continent, 'language':language }) }}">28 derniers jours</a></li>
            <li{% if days == '368' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':365, 'continent':continent, 'language':language }) }}">365 derniers jours</a></li>
        </ul>
    </div>
    <div class="btn-group">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            {{ language ? language : '-' }}<span class="ladb-hidden-mobile"></span>
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right">
            <li class="dropdown-header">Langue OCL</li>
            <li{% if language is null %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':continent, 'language':null }) }}">Toutes</a></li>
            <li{% if language == 'fr' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':continent, 'language':'fr' }) }}">Français</a></li>
            <li{% if language == 'en' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':continent, 'language':'en' }) }}">Anglais</a></li>
            <li{% if language == 'de' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':continent, 'language':'de' }) }}">Allemand</a></li>
            <li{% if language == 'ru' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':continent, 'language':'ru' }) }}">Russe</a></li>
            <li{% if language == 'it' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':continent, 'language':'it' }) }}">Italien</a></li>
            <li{% if language == 'pt' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':continent, 'language':'pt' }) }}">Portugais</a></li>
        </ul>
    </div>
    <div class="btn-group">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <i class="ladb-icon-globe"></i> {{ continent }}
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right">
            <li class="dropdown-header">Continent</li>
            <li{% if continent is null %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':null, 'language':language }) }}">Monde</a></li>
            <li{% if continent == 'AF' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':'AF', 'language':language }) }}">Afrique</a></li>
            <li{% if continent == 'NA' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':'NA', 'language':language }) }}">Amérique du Nord</a></li>
            <li{% if continent == 'SA' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':'SA', 'language':language }) }}">Amérique du Sud</a></li>
            <li{% if continent == 'AN' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':'AN', 'language':language }) }}">Antarctique</a></li>
            <li{% if continent == 'AS' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':'AS', 'language':language }) }}">Asie</a></li>
            <li{% if continent == 'EU' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':'EU', 'language':language }) }}">Europe</a></li>
            <li{% if continent == 'OC' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':env, 'days':days, 'continent':'OC', 'language':language }) }}">Océanie</a></li>
        </ul>
    </div>
    <div class="btn-group">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <i class="ladb-icon-bug"></i> {{ env|upper }}
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right">
            <li class="dropdown-header">Environnement</li>
            <li{% if env == 'dev' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':'dev', 'days':days, 'continent':continent, 'language':language }) }}">DEV</a></li>
            <li{% if env == 'prod' %} class="active"{% endif %}><a href="{{ path('core_opencutlist_stats', { 'env':'prod', 'days':days, 'continent':continent, 'language':language }) }}">PROD</a></li>
        </ul>
    </div>
    </div>
{% endblock %}
