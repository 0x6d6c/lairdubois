{% extends 'LadbCoreBundle:Common:_list-topbar.part.html.twig' %}

{% set isDev = env == constant('\\Ladb\\CoreBundle\\Entity\\Opencutlist\\Access::ENV_DEV') ? true : false %}
{% set heading = '<i class="ladb-icon-statistics"></i> OpenCutList Stats' %}

{% block listTopbarRightInner %}
    <div class="ladb-header-tools" style="padding-top: 0;">
    <div class="btn-group">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <i class="ladb-icon-history"></i> {{ days }} derniers jours
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right">
            <li><a href="{{ path('core_opencutlist_stats', { 'env':(isDev ? 'dev' : 'prod'), 'days':7 }) }}">7 derniers jours</a></li>
            <li><a href="{{ path('core_opencutlist_stats', { 'env':(isDev ? 'dev' : 'prod'), 'days':28 }) }}">28 derniers jours</a></li>
            <li><a href="{{ path('core_opencutlist_stats', { 'env':(isDev ? 'dev' : 'prod'), 'days':365 }) }}">365 derniers jours</a></li>
        </ul>
    </div>
    <div class="btn-group">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <i class="ladb-icon-bug"></i> {% if isDev %}DEV{% else %}PROD{% endif %}
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right">
            <li><a href="{{ path('core_opencutlist_stats', { 'env':'dev', 'days':days }) }}">DEV</a></li>
            <li><a href="{{ path('core_opencutlist_stats', { 'env':'prod', 'days':days }) }}">PROD</a></li>
        </ul>
    </div>
    </div>
{% endblock %}
