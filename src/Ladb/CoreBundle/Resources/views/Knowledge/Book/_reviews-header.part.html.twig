{# set book #}

<div class="ladb-reviews-header">
    {% if book.reviewCount > 0 %}
        {% if is_granted("ROLE_USER") and userReview is defined and not userReview %}<button class="btn btn-default pull-right" data-loading-text="{{ 'default.loading'|trans() }}" onclick="$('#ladb_review_btn').click();"><i class="ladb-icon-plus"></i> {{ 'knowledge.book.review.new'|trans() }}</button>{% endif %}
        <h2 class="ladb-margin-bottom">{{ book.reviewCount }} {{ 'knowledge.book.choice.reviews'|transchoice(book.reviewCount) }}</h2>
    {% else %}
        <h2>{{ 'knowledge.book.choice.reviews'|transchoice(2)|capitalize }}</h2>
    {% endif %}
</div>
