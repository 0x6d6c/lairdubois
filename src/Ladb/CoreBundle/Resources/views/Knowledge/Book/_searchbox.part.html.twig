{% extends 'LadbCoreBundle:Core/Search:_searchbox.part.html.twig' %}

{% set placeholder = 'search.in.books'|trans() %}
{% set searchPath = path('core_book_list') %}
{% set masonry = true %}

{% block filtersDropdown %}
    {% if app.user %}
        <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="author" data-label="Auteur" data-editable="true" data-icon="user"><i class="ladb-icon-user"></i> Auteur</a></li>
        <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="editor" data-label="Editeur" data-editable="true" data-icon="book"><i class="ladb-icon-book"></i> Editeur</a></li>
        <li class="divider"></li>
        <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="subjects" data-label="Sujets" data-editable="true" data-icon="list"><i class="ladb-icon-list"></i> Sujets</a></li>
        <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="language" data-label="Langue" data-editable="true" data-icon="answer"><i class="ladb-icon-answer"></i> Langue</a></li>
        <li class="divider"></li>
        <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="public-domain" data-label="Domaine public" data-editable="false" data-icon="public-domain"><i class="ladb-icon-public-domain"></i> Domaine public</a></li>
        <li class="divider"></li>
        <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="with-review" data-label="Avec critique" data-editable="false" data-icon="review"><i class="ladb-icon-review"></i> Avec critique</a></li>
        <li class="divider"></li>
        <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="rejected" data-label="Rejetés" data-icon="thumb-down"><i class="ladb-icon-thumb-down"></i> Rejetés</a></li>
    {% endif %}
    {# Hidden filters #}
    <li class="hidden"><a class="ladb-smartsearch-facet" data-type="filter" data-name="title" data-label="Titre" data-editable="true" data-icon="filter"><i class="ladb-icon-filter ladb-icon-fixed-center"></i> Titre</a></li>
    <li class="hidden"><a class="ladb-smartsearch-facet" data-type="filter" data-name="collection" data-label="Collection" data-editable="true" data-icon="filter"><i class="ladb-icon-filter ladb-icon-fixed-center"></i> Collection</a></li>
{% endblock %}

{% block sortersDropdown %}
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-recent" data-label="Récents" data-unique="true" data-icon="time"><i class="ladb-icon-time"></i> Récents</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-views" data-label="Plus vus" data-unique="true" data-icon="eye"><i class="ladb-icon-eye"></i> Plus vus</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-likes" data-label="Préférés" data-unique="true" data-icon="like"><i class="ladb-icon-like"></i> Préférés</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-comments" data-label="Plus commentés" data-unique="true" data-icon="comment"><i class="ladb-icon-comment"></i> Plus commentés</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-rating" data-label="Mieux notés" data-unique="true" data-icon="review"><i class="ladb-icon-review"></i> Mieux notés</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-random" data-label="Aléatoire" data-unique="true" data-random="true" data-icon="random"><i class="ladb-icon-random"></i> Aléatoire</a></li>
{% endblock %}

{% block searchboxShortcuts %}
    <li><a class="ladb-smartsearch-shortcut" data-query="@with-review"><i class="ladb-icon-review"></i> Avec critique</a></li>
    <li><a class="ladb-smartsearch-shortcut" data-query="@public-domain"><i class="ladb-icon-public-domain"></i> Domaine public</a></li>
{% endblock %}
