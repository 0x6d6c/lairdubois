
{% set clickable = clickable is defined ? clickable : true %}
{% set width = size|default('400') %}
{% set height = size|default('400') %}
{% set fullHtmlStyle = fullHtmlStyle|default(false) %}

{% if fullHtmlStyle %}
    <img src="{{ value.data.webPath|imagine_filter('64x64o') }}" width="64" height="64" style="border: 1px solid #ccc; background-color: #fff; padding: 4px;" alt="{{ entity.title|raw }}">
{% else %}
    {% if clickable %}
        {% include 'LadbCoreBundle:Picture:_img-link.part.html.twig' with { 'picture':value.data, 'alt':value.legend, 'dataGallery':value.voteScore < 0 ? '#blueimp-gallery' : '#blueimp-gallery-rejected' } %}
    {% else %}
        {% include 'LadbCoreBundle:Picture:_img.part.html.twig' with { 'picture':value.data, 'alt':value.legend, 'imgClasses':'thumbnail' } %}
    {% endif %}
{% endif %}
