{# set pictures #}
{# set alt #}

{% set isPortrait = pictures[0].heightRatio100 >= 133 %}
<div class="ladb-showcase{% if isPortrait %} ladb-showcase-portrait{% endif %} row">
    <div class="ladb-showcase-picture-0 col-xs 12 col-sm-{% if isPortrait %}9{% else %}12{% endif %}">
        {% block picture0 %}
            {% include 'LadbCoreBundle:Core/Picture:_img-link.part.html.twig' with { 'picture':pictures[0], 'width':'600', 'height':'600', 'filterMode':'i', 'alt':alt } %}
        {% endblock %}
    </div>
    {% if pictures.count > 1 %}
        {% for index in 1..4 %}
            <div class="ladb-showcase-picture-n col-xs-6 col-sm-3{% if index >= pictures.count and index > 2 and pictures.count <= 3  %} ladb-hidden-mobile{% endif %}">
                {% if index < pictures.count %}
                    {% include 'LadbCoreBundle:Core/Picture:_img-link.part.html.twig' with { 'picture':pictures[index], 'width':'128', 'height':'128', 'alt':alt, 'attributes':'data-pin-nopin="true"' } %}
                {% else %}
                    <div class="thumbnail thumbnail-empty"><img src="{{ 'empty.png'|imagine_filter('128x128o') }}" alt="empty" data-pin-nopin="true"></div>
                {% endif %}
            </div>
        {% endfor %}
    {% endif %}
</div>
