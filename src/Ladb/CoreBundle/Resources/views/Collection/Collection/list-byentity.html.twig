{% extends 'LadbCoreBundle:Common:Layout/_list.html.twig' %}

{% set masonry = true %}
{% set masonryWide = true %}
{% set hideHeaderContainer = false %}

{% block bodyHeaderContainerContent %}
    {% if entity.user is defined %}
        {% include 'LadbCoreBundle:Common:_entity-avatar-header.part.html.twig' %}
    {% else %}
        {% include 'LadbCoreBundle:Common:_entity-header.part.html.twig' %}
    {% endif %}
{% endblock %}

{% block bodyContainerContent %}
    <div class="panel panel-default ladb-margin-remove ladb-margin-top">
        <div class="panel-body">
            Liste des <strong>collections publiques</strong> dans lesquelles ont été enregistrées la plublication <a href="{{ ladb_entity_url_action(entity) }}">{{ entity.title }}</a>.
        </div>
    </div>
    <div class="ladb-filterbar">
        <span class="ladb-heading pull-right">{{ collections.count }} {{ 'collection.collection.choice.entities'|transchoice(collections.count) }}</span>
    </div>
    {{ parent() }}
{% endblock %}

{% block autopagerContainerInner %}
    {% include 'LadbCoreBundle:Collection/Collection:_list-n.part.html.twig' %}
{% endblock %}
