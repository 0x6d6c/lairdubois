{% extends 'LadbCoreBundle:Common:Modal/_modal-content.part.html.twig' %}

{% use 'LadbCoreBundle:Common:_list-autopager.blocks.html.twig' %}

{% set id = 'collections_modal' %}
{% set title = '<i class="ladb-icon-collection-add"></i>&nbsp;'~('collection.collection.add'|trans()) %}
{% set embeddedBody = collections|length > 0  %}

{% set autopagerContainerSelector = '#collections_modal .modal-body' %}

{% block bodyInner %}
    {% if collections|length == 0 %}
        <p>Vous n'avez aucune collection pour l'instant.</p>
    {% endif %}
    {% include 'LadbCoreBundle:Collection/Collection:_list-available-n.part.html.twig' %}
    {{ block('autopagerScript') }}
{% endblock %}

{% block footerInner %}
    {% if collections|length > 0 %}
        <small class="help-block pull-left">â¬† Cochez les cases pour enregistrer</small>
    {% endif %}
    <a href="{{ path('core_collection_new', { 'entityType':entity.type, 'entityId':entity.id }) }}" class="btn btn-default"><i class="ladb-icon-plus"></i> {{ 'collection.collection.new'|trans() }}</a>
{% endblock %}