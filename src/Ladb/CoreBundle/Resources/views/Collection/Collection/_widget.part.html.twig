
{# set collectionContext #}

{% if collectionContext is not null and collectionContext.isCollectionnable %}
    <a class="btn btn-default" onclick="$('#collections_modal').modal({ remote:'{{ path('core_collection_list_available', { 'entityType':collectionContext.entityType, 'entityId':collectionContext.entityId }) }}' });">
        <i class="ladb-icon-collection"></i>
    </a>
    {% include 'LadbCoreBundle:Collection/Collection:_modal.part.html.twig' %}
{% endif %}