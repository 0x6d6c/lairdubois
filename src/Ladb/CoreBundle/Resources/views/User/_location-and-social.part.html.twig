{# set user #}
{# set noMicrodata (facultative) #}

{% set noMicrodata = noMicrodata|default(false) %}

{% if user.location %}<div class="ladb-subblock"><i class="ladb-icon-location"></i> <a href="https://maps.google.fr/maps?q={{ user.location|url_encode }}" target="_blank"><span{% if not noMicrodata %} itemprop="homeLocation"{% endif %}>{{ user.location }}</span></a></div> {% endif %}
{% if user.website %}<div class="ladb-subblock"><i class="ladb-icon-globe"></i> <a href="{{ user.website }}" target="_blank"{% if not noMicrodata %} itemprop="sameAs"{% endif %}>{{ user.website|ladb_url_trim|truncate(30) }}</a></div> {% endif %}
<div class="ladb-subblock">
    {% if user.facebook %}<a href="https://www.facebook.com/{{ user.facebook }}" target="_blank" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Facebook"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-facebook-square ladb-icon-lg"></i></a> {% endif %}
    {% if user.twitter %}<a href="https://twitter.com/{{ user.twitter }}" target="_blank" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Twitter"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-twitter-square ladb-icon-lg"></i></a> {% endif %}
    {% if user.googleplus %}<a href="https://plus.google.com/{{ user.googleplus }}" target="_blank" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Google+"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-google-plus-square ladb-icon-lg" target="_blank"></i></a> {% endif %}
    {% if user.youtube %}<a href="https://www.youtube.com/channel/{{ user.youtube }}" target="_blank" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur YouTube"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-youtube-square ladb-icon-lg" target="_blank"></i></a> {% endif %}
    {% if user.vimeo %}<a href="https://vimeo.com/{{ user.vimeo }}" target="_blank" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Vimeo"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-vimeo-square ladb-icon-lg" target="_blank"></i></a> {% endif %}
    {% if user.dailymotion %}<a href="https://www.dailymotion.com/{{ user.dailymotion }}" target="_blank" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Dailymotion"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-dailymotion-square ladb-icon-lg" target="_blank"></i></a> {% endif %}
    {% if user.pinterest %}<a href="http://pinterest.com/{{ user.pinterest }}" target="_blank" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Pinterest"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-pinterest-square ladb-icon-lg" target="_blank"></i></a> {% endif %}
    {% if user.instagram %}<a href="http://instagram.com/{{ user.instagram }}" target="_blank" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Instagram"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-instagram-square ladb-icon-lg" target="_blank"></i></a> {% endif %}
</div>