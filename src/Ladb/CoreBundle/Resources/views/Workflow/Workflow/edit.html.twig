{% extends 'LadbCoreBundle:Workflow:Workflow/_form.html.twig' %}

{% set pageTitle = 'workflow.workflow.edit'|trans() %}
{% set formAction = path('core_workflow_update', { 'id':workflow.id }) %}

{% block sidenavHeading %}
    <i class="ladb-icon-edit"></i> {{ 'workflow.workflow.edit'|trans() }}
{% endblock %}

{% block form_buttons %}
    <a href="{{ path('core_workflow_show', { 'id':workflow.sluggedId }) }}" class="btn btn-default btn-block">{{ 'default.cancel'|trans() }}</a>
    {% include 'LadbCoreBundle:Common:_form-btn-loading.part.html.twig' with { 'text':('default.update'|trans()), 'classes':'ladb-form-save-btn btn-primary btn-block' } %}
{% endblock %}
