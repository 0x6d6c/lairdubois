{% extends 'LadbCoreBundle:Howto/Article:_form.html.twig' %}

{% set pageTitle = 'howto.article.edit'|trans() %}
{% set formAction = path('core_howto_article_update', { 'id':article.id, 'rtu':rtu }) %}

{% block sidenavHeading %}
    <i class="ladb-icon-edit"></i> {{ 'howto.article.edit'|trans() }}
{% endblock %}

{% block form_buttons %}
    <a href="{{ rtu is not empty ? rtu : path('core_howto_article_show', { 'id':article.sluggedId }) }}" class="btn btn-default btn-block">{{ 'default.cancel'|trans() }}</a>
    {% include 'LadbCoreBundle:Common:_form-btn-loading.part.html.twig' with { 'text':('default.update'|trans()), 'classes':'ladb-form-save-btn btn-primary btn-block' } %}
{% endblock %}

