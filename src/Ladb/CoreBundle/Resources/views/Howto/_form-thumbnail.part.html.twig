
{# set howto #}

{% set typeStrippedName = ladb_entity_type_stripped_name(howto) %}

<li id="howto_{{ howto.id }}" class="ladb-{{ typeStrippedName }} ladb-form-thumbnail thumbnail">
    <div class="uk-overlay">
        <img src="{{ (howto.mainPicture is not null ? howto.mainPicture.webPath : 'avatar.png')|imagine_filter('128x128o') }}" width="128" height="128">
        <div class="uk-overlay-caption">{{ howto.title }}<br><small>{{ 'default.by'|trans() }} {{ howto.user.displayName }}</small></div>
    </div>
    <div style="text-align: center;margin-top: 5px;">
        <a href="#" class="btn btn-xs btn-danger" onclick="$('#{{ typeStrippedName }}_{{ howto.id }}').remove();{{ typeStrippedName }}Removed();return false;">{{ 'default.remove'|trans() }}</a>
    </div>
</li>