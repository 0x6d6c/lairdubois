{% extends 'LadbCoreBundle:Core/Search:_searchbox.part.html.twig' %}

{% set placeholder = 'search.in.finds'|trans() %}
{% set searchPath = path('core_find_list') %}
{% set masonry = true %}
{% set masonryWide = true %}

{% block filtersDropdown %}
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="tag" data-label="Tag" data-editable="true" data-icon="tag" data-proposals-url="{{ path('core_search_typeahead_tags_json')|raw }}"><i class="ladb-icon-tag"></i> Tags</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="kind" data-value="{{ constant('Ladb\\CoreBundle\\Entity\\Find\\Find::KIND_WEBSITE') }}" data-label="Sites Web" data-editable="false" data-unique="true" data-icon="globe"><i class="ladb-icon-globe"></i> Sites Web</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="kind" data-value="{{ constant('Ladb\\CoreBundle\\Entity\\Find\\Find::KIND_VIDEO') }}" data-label="Vidéos" data-editable="false" data-unique="true" data-icon="video"><i class="ladb-icon-video"></i> Vidéos</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="kind" data-value="{{ constant('Ladb\\CoreBundle\\Entity\\Find\\Find::KIND_GALLERY') }}" data-label="Photos" data-editable="false" data-unique="true" data-icon="camera"><i class="ladb-icon-camera"></i> Photos</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="kind" data-value="{{ constant('Ladb\\CoreBundle\\Entity\\Find\\Find::KIND_EVENT') }}" data-label="Evènements" data-editable="false" data-unique="true" data-icon="date"><i class="ladb-icon-date"></i> Evènements</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="author" data-label="Auteur" data-editable="true" data-unique="true" data-icon="user"><i class="ladb-icon-user"></i> Auteur</a></li>
    {% if is_granted("ROLE_USER") %}
        <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="mine" data-value="all" data-label="Mes trouvailles" data-unique="true" data-icon="globe"><i class="ladb-icon-globe"></i> Mes trouvailles</a></li>
        <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="mine" data-value="draft" data-label="Mes brouillons" data-unique="true" data-icon="draft"><i class="ladb-icon-draft"></i> Mes brouillons</a></li>
    {% endif %}
{% endblock %}

{% block sortersDropdown %}
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-recent" data-label="Récentes" data-unique="true" data-icon="time"><i class="ladb-icon-time"></i> Récentes</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-views" data-label="Plus vues" data-unique="true" data-icon="eye"><i class="ladb-icon-eye"></i> Plus vues</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-likes" data-label="Préférées" data-unique="true" data-icon="like"><i class="ladb-icon-like"></i> Préférées</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-comments" data-label="Plus commentées" data-unique="true" data-icon="comment"><i class="ladb-icon-comment"></i> Plus commentées</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-random" data-label="Aléatoire" data-unique="true" data-random="true" data-icon="random"><i class="ladb-icon-random"></i> Aléatoire</a></li>
{% endblock %}

{% block searchboxShortcuts %}
    <li><a class="ladb-smartsearch-shortcut" data-query="@kind:{{ constant('Ladb\\CoreBundle\\Entity\\Find\\Find::KIND_WEBSITE') }}"><i class="ladb-icon-globe"></i> Sites Web</a></li>
    <li><a class="ladb-smartsearch-shortcut" data-query="@kind:{{ constant('Ladb\\CoreBundle\\Entity\\Find\\Find::KIND_VIDEO') }}"><i class="ladb-icon-video"></i> Vidéos</a></li>
    <li><a class="ladb-smartsearch-shortcut" data-query="@kind:{{ constant('Ladb\\CoreBundle\\Entity\\Find\\Find::KIND_GALLERY') }}"><i class="ladb-icon-camera"></i> Photos</a></li>
    <li><a class="ladb-smartsearch-shortcut" data-query="@kind:{{ constant('Ladb\\CoreBundle\\Entity\\Find\\Find::KIND_EVENT') }}"><i class="ladb-icon-date"></i> Evènements</a></li>
{% endblock %}



